<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:id="@+id/collapse_view"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        >
        
        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/btHide"
            android:padding="2dp"
            android:src="@drawable/icon"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:background="#FF222930"
        android:id="@+id/expanded_container"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <LinearLayout
            android:id="@+id/root_container"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            >

            <LinearLayout
                android:id="@+id/win_move"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#FF111C27"
                android:layout_gravity="center_horizontal|center_vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical"
                    >

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HYDRA MODZ"
                        android:textColor="#FF88C0F0"
                        android:textSize="15sp"
                        android:ellipsize="marquee"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:singleLine="true"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#FF88C0F0"
                        android:text="Toram Online MOD"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_settings"
                    app:tint="#FF88C0F0"
                    android:translationX="50dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/menu3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible"
                        >

                        <TextView
                            android:background="#FF5F7F9D"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="PLAYER MENU"
                            android:textColor="#FFF"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />

                        <Switch
                            android:id="@+id/godmode"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Immortal"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/crit"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Always Crit"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/aspd"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Attack Speed"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:text="Value Attack Speed: "
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/textValueAspd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FF00FF00"
                                android:text="0"
                                android:padding="2dp"
                                />

                        </LinearLayout>

                        <SeekBar
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:id="@+id/value_aspd"
                            android:layout_weight="1"
                            android:max="20000"
                            android:progress="0"
                            />

                        <Switch
                            android:id="@+id/stable"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Damage Stable"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/deff"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  High Deff"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/mdeff"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  High Mdeff"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:visibility="gone"
                            android:id="@+id/crate"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="  Crit Rate"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:text="Value Crit Rate: "
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/textValueCr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FF00FF00"
                                android:text="0"
                                android:padding="2dp"
                                />

                        </LinearLayout>

                        <SeekBar
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:id="@+id/value_cr"
                            android:layout_weight="1"
                            android:max="500"
                            android:progress="0"
                            android:visibility="gone"
                            />

                        <Switch
                            android:id="@+id/dmgboost"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Damage Booster"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:text="Value Damage: "
                                android:textSize="15sp"
                                />

                            <TextView
                                android:id="@+id/textValueDmg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FF00FF00"
                                android:text="0"
                                android:padding="2dp"
                                />

                        </LinearLayout>

                        <SeekBar
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:id="@+id/value_damage"
                            android:layout_weight="1"
                            android:max="500"
                            android:progress="0"
                            />

                        <TextView
                            android:background="#FF5F7F9D"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="MONSTER MENU"
                            android:textColor="#FFF"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />

                        <Switch
                            android:id="@+id/mobinv"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  No Immune"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/nograze"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  No Graze"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/nogu"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  No Guard"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/noev"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  No Eva"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/nomove"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  No Move"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/ldeffmdeff"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Low Deff / M Deff"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:background="#FF5F7F9D"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="SKILL MENU"
                            android:textColor="#FFF"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />

                        <Switch
                            android:id="@+id/skillburst"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  All Skill Burst"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/unlibuff"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Umlimited Buff Skill"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/insfin"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Instant Finale"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/inscs"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Instant Cast"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="  Quickdraw 100%"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/radius"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Big Radius"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/ailment"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Ailment 100%"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/cf"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Instant Charge CF"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <TextView
                            android:background="#FF5F7F9D"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="OTHER MENU"
                            android:textColor="#FFF"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />

                        <Switch
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="  Skip MQ"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/cutscene"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Skip Cutscene"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/unlockboss"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Unlock Boss No MQ"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/nodomi"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  No Domination"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:id="@+id/autoguard"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            android:text="  Auto Guard"
                            android:textColor="#FFF"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:text="Element: "
                                android:textSize="15sp"
                                />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:background="#FF424F5C"
                            android:layout_width="fill_parent"
                            android:layout_height="48dp"
                            app:cardCornerRadius="5dp"
                            android:layout_margin="3dp"
                            >

                            <Spinner
                                android:id="@+id/sp_ele"
                                android:layout_width="fill_parent"
                                android:layout_height="48dp"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <Button
                        android:id="@+id/ye"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="BYPASS OFF"
                        android:textColor="#FFF"
                        android:backgroundTint="#FF424F5C"
                        android:layout_margin="3dp"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        />

                    <ToggleButton
                        android:id="@+id/bypass"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_margin="3dp"
                        android:layout_gravity="center"
                        android:textColor="#FFF"
                        android:background="#B0FF0000"
                        android:textOn="BYPASS: ON"
                        android:textOff="BYPASS: OFF"
                        />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:textColor="#FF00FF00"
                            android:text="The input number: "
                            />

                        <EditText
                            android:layout_marginTop="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="input"
                            android:background="@android:color/transparent"
                            android:textColor="#FF00FF00"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                            android:text="SET"
                            android:backgroundTint="#FF424F5C"
                            android:textColor="#FFFFFF"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:id="@+id/menu2"
                        android:visibility="gone"
                        >

                        <Switch
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Option 1"
                            android:id="@+id/opt1"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Option 2"
                            android:id="@+id/opt2"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            />

                        <Switch
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Option 3"
                            android:id="@+id/opt3"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="#FFFFFF"
                            android:text="CLOSE"
                            android:layout_margin="3dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#FF424F5C"
                            />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:id="@+id/win_move22"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#FF2090F0"
                    android:text="EXIT"
                    android:translationX="-50dp"
                    />

                <TextView
                    android:id="@+id/ChangeWindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#FF2090F0"
                    android:text="MINIMIZE"
                    android:translationX="50dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>